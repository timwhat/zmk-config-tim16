#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// -------------------------------------------------------------
// | Mute Mic|fast scroll|  \    |   DEL   |
// |changevol|    F7   |    F8   |   F9    |
// |  Shift  |    F4   |    F5   |   F6    |
// |  FUNC   |    F1   |    F2   |   F3    |

            bindings = <
                &kp C_MUTE &none    &kp NUBS &kp DEL
                &none      &kp F7   &kp F8   &kp F9
                &kp RSHIFT &kp F4   &kp F5   &kp F6
                &none      &kp F1   &kp F2   &kp F3
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};